@model List<LearnEnglish.Models.Book.BookViewModel>

@section Head {
    <script src="~/js/book.js"></script>
    <link rel="stylesheet" href="~/css/book.css" />
}

<div class="books">
    @foreach (var book in Model)
    {
    <div class="book-cover">
        <div class="book-name">
            @book.Name
        </div>

        <div class="image-wrapper">
            <img src="@book.Url" class="image-wrapper-size"/>
        </div>

        <div class="buttons">
            <a class="button">Добавить в корзину</a>
            <a class="button">Смотреть описание</a>
        </div>
    </div>
    }
</div>