@using LearnEnglish.Services
@inject UserService userService

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js"></script>
    <script src="~/js/registration.js"></script>
    <script src="~/js/localize.js"></script>

    @RenderSection("Head", false)
</head>
<body>
    <header>
        <ul class="menu-main">
            <li><img src="~/image/logo.png" /></li>
            <li><a href="">Learn English</a></li>
            <li><a href="">Video</a></li>
            <li><a href="">Audio</a></li>
            <li><a href="">Text</a></li>
        </ul>
    </header>
    <div class="center-block">
        <div class="menu">
            <ul>
                @if (User.Identity.IsAuthenticated)
                {
                    <li><a href="/UserProfile/MyProfile">MyProfile</a></li>
                    <li><a href="/Lesson/Select">LessonSelect</a></li>
                    <li><a href="/User/SelectedLessons">SelectedLessons</a></li>
                    <li><a href="/User/Logout">Exit</a></li>
                    @if (userService.IsAdmin())
                    {
                        <li><a href="/Lesson/Add">LessonAdd</a></li>
                    }
                }
                else
                {
                    <li><a href="/User/Registration">Registration</a></li>
                    <li><a href="/User/Login">Login</a></li>
                }
                <li><a href="">Lessons</a></li>
                <li><a href="/Test/Add">AddTest</a></li>
                <li><a href="/Book/Add">Add book</a></li>
                <li><a href="/Book/Books">All books</a></li>
                <li><a href="/Test/Select">All tests</a></li>
            </ul>


            <button class="card">@LearnEnglish.Localize.BankCard.Bank_Card</button>
            <div class="card-option hidden">
                <a href="/BankCard/BankCardAdd">@LearnEnglish.Localize.BankCard.Add_Сard</a><br>
                <a href="/BankCard/BankCardRemove">@LearnEnglish.Localize.BankCard.Remove_Сard</a><br>
                <a href="/BankCard/BankCardAll">@LearnEnglish.Localize.BankCard.See_All</a><br>
            </div>
        </div>
        <div class="content">
            @RenderBody()
        </div>
    </div>

    <div class="footer">
        <span class="rights">
            © All rights reserved - 2021 - LearnEnglish - TMS2021
        </span>

        <span>
            Language
            <select class="language">
                <option value="ru-RU">Русский</option>
                <option value="en-EN">English</option>
                <option value="pl-PL">Polskie</option>
            </select>
        </span>

        <span class="contacts">
            <span class="social-media">
                <a href="https://facebook.com"><img class="footer-icon" src="/image/icon/facebook.png"></a>
                <a href="https://instagram.com"><img class="footer-icon" src="/image/icon/instagram.png"></a>
                <a href="https://telegram.org"><img class="footer-icon" src="/image/icon/telegram.png"></a>
            </span>
        </span>
    </div>
</body>
</html>
